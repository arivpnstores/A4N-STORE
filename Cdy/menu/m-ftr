}

function  CLEAR() {
  echo -e  " ${BG_BLU}               MENU CLEAR              ${Xark}"
}


function  INFORMATION() {
  echo -e  " ${BG_BLU}              INFORMATION              ${Xark}"
}


function  OTHER() {
  echo -e  " ${BG_BLU}                OTHER                  ${Xark}"
}


