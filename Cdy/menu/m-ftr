function Select_Menu() {
read -p "Select From Options [1-22 or x] :  " NB
case $NB in
1) clear ; run ;;
2) clear ; reset ;;
3) clear ; autoreboot ;;
4) clear ; gotop ;;
5) clear ; speedtest ;;
6) clear ; xp ;;
7) clear ; nano /etc/banner.txt ;;
8) clear ; change-domain ;;
9) clear ; fixhap ;;
10) clear ; fixngix ;;
11) clear ; fixws-epro ;;
12) clear ; fixcert ;;
13) clear ; clearcache ;;
14) clear ; clearlog ;;
15) clear ; delet-cache-file ;;
16) clear ; Info_Port ;;
17) clear ; about ;;
18) clear ; sc ;;
19) clear ; limitspeed ;;
20) clear ; limit-on-off ;;
21) clear ; menu ;;
x) exit ;;
*) m-ftr ;;
esac
}


Banner
